{
  "root": true, //root es lint file
  "extends": [
    "eslint:recommended", // using eslints recommended rules
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "no-console": 1 //1 warning 2 error 0 off
  }
}
